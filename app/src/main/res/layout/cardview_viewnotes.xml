<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/mdtp_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tv_setdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-09-2016 "
            android:maxLength="10"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_date"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Androidwarriors "
            android:textColor="#000000"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_date"
            android:textAppearance="@android:style/TextAppearance.Medium"
             />

        <TextView
            android:id="@+id/tv_note_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_note_title"
            android:textColor="#000000"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_marginLeft="2dp"
            android:text="Place to dive into android programming"
            android:textAppearance="@android:style/TextAppearance.Small"
             />

      <Button
          android:id="@+id/btn_edit"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:text="Edit"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="2dp"
          android:background="@color/colorPrimary"
          android:textColor="@color/mdtp_white"
          android:layout_below="@+id/tv_note_desc"
          android:layout_alignParentLeft="true"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Delete"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/mdtp_white"
            android:layout_below="@+id/tv_note_desc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/btn_edit"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
